@{
    ViewBag.Title = "Upload Pregenerated Card";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Scripts.Render("~/bundles/uploadpregeneratedcard")
<aside class="content-wrapper sidebarLeft">
    <div class="content container-fluid sidebarRight animated fadeInUp">
        <div class="row">

            <div class="col-sm-12">
                <div class="panel panel-white">
                    <div class="panel-body content-title-container">
                        <div class="right">
                            <ol class="breadcrumb breadcrumb-theme breadcrumb-sm breadcrumb-green">
                                <li><a href="~/Home/Dashboard">Dashboard</a></li>
                                <li><a>Card Management</a></li>
                                <li class="active"><a>Upload Pregenerated Card</a></li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="panel panel-white">
                    <div class="panel-heading">
                        <h3 class="panel-title">Upload Pregenerated Card</h3>
                    </div>
                    <div class="panel-body">
                        <div id="form-validation" class="form-horizontal" role="form">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Sample File Format (.csv)</label>
                                <label class="col-sm-2 control-label">
                                <b style="color:green">Card Number</b><br />
                                50490494049<br />
                                59069055950</label>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Upload Card File</label>
                                <div class="col-sm-10">
                                    <input type="file" id="csvFileInput" onchange="handleFiles(this.files)"
                                           accept=".csv">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Branch</label>
                                <div class="col-sm-10">
                                    <select class="form-control" id="branch"></select>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <button type="submit" id="addBtn" class="btn btn-green" style="float:right;" onclick="uploadPregeneratedCard()"><i class="fa fa-cog"></i> Upload</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</aside>


